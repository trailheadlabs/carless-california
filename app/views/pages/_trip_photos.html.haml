- carousel_id = "trip-photo-carousel-#{trip_id}"
.trip-photos
  .row
    .col-md-5.visible-md.visible-lg
      .photo-thumbnails
        - 3.times do
          .row
            - 3.times do |i|
              .col-md-4.nopadding
                .trip-photo-thumbnail(data-target="##{carousel_id}" data-slide-to="#{i}")
                  = image_tag "/assets/placeholders/destination_profile.png"
    .col-md-7
      .trip-photo-gallery
        .carousel.slide(id="#{carousel_id}" data-ride="carousel")
          .carousel-inner(role="listbox")
            .item.active
              = image_tag "/assets/photos/yosemite.jpg"
            .item
              = image_tag "/assets/photos/tahoe.jpg"
            .item
              = image_tag "/assets/photos/yosemite.jpg"
          %a.left.carousel-control{"data-slide" => "prev", :href => "##{carousel_id}", :role => "button"}
            %span.glyphicon.glyphicon-chevron-left{"aria-hidden" => "true"}
            %span.sr-only Previous
          %a.right.carousel-control{"data-slide" => "next", :href => "##{carousel_id}", :role => "button"}
            %span.glyphicon.glyphicon-chevron-right{"aria-hidden" => "true"}
            %span.sr-only Next
