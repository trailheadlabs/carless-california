- orig_from = params[:from] || 'san_francisco'
- from = orig_from.gsub(/_/,' ').titleize

/ Page Header
/ Set your background image for this header on the line below.
%header.intro-header{:style => "background-image: url('/assets/photos/yosemite.jpg')"}
  .container
    .row
      .col-md-12
        .destination-heading
          %h1.text-center
            #{from} to
            %br
            Yosemite
    .row
      .col-md-4.col-md-offset-2
        .from-select
          .item.selected-item
            from #{from}
            .pull-right
              %i.fa.fa-caret-down
          .unselected-items
            - if orig_from == "san_francisco"
              = link_to "/to/yosemite/from/sacramento" do
                .item.unselected-item
                  from Central Valley
            - else
              = link_to "/to/yosemite/from/san_francisco" do
                .item.unselected-item
                  from San Francisco
      .col-md-4
        .to-select
          .item.selected-item
            to Yosemite
            .pull-right
              %i.fa.fa-caret-down
          .unselected-items
            = link_to "/to/south_lake_tahoe/from/#{orig_from}" do
              .item.unselectd-item
                to South Lake Tahoe

.container
  .row
    .col-md-12
      .destination-heading
        = image_tag "/assets/placeholders/destination_profile.png", class: "destination-image"
        .destination-blurb
          .lead
            Sed ut perspiciatis unde omnis iste natus error sit voluptatem accusantium doloremque laudantium.
          .lead
            Sed ut perspiciatis unde omnis iste natus error sit voluptatem accusantium doloremque laudantium, totam rem aperiam, eaque ipsa quae ab illo inventore veritatis et quasi architecto beatae vitae dicta sunt explicabo.
        .clearfix

.additional-info-container
  .container
    .row
      .col-xs-8
        %h4 Additional Info
      .col-xs-4
        .circulabel.pull-right.open-btn
          %i.fa.fa-plus
        .circulabel.pull-right.close-btn
          %i.fa.fa-minus

= render partial: "/pages/yosemite_additional_info", locals:{from:from}

.blue-container
  .container
    .row
      .col-md-12
        %h4 Top Transit Accessible Activities
- 10.times do |i|
  = render partial: "/pages/activity", locals:{trip_id:i,trip:{}}

- if _trip_id = params[:trip_id].presence
  :javascript
    CarLess.loadTripDetails(#{_trip_id});

:javascript
  $(function(){
    $('.from-select .selected-item').on('mouseenter',function(){
      $('.from-select .unselected-items').slideDown(200);
    });
    $('.from-select').on('mouseleave',function(){
      $('.from-select .unselected-items').slideUp(200);
    });
    $('.from-select').on('click',function(){
      $('.from-select .unselected-items').slideToggle(200);
    });

    $('.to-select .selected-item').on('mouseenter',function(){
      $('.to-select .unselected-items').slideDown(200);
    });
    $('.to-select').on('mouseleave',function(){
      $('.to-select .unselected-items').slideUp(200);
    });
    $('.to-select').on('click',function(){
      $('.to-select .unselected-items').slideToggle(200);
    });

  });
