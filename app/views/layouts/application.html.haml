!!!
%html
  %head
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}/
    %title= content_for?(:title) ? yield(:title) : "CarLess California"
    %meta{:content => content_for?(:description) ? yield(:description) : "CarLess California", :name => "description"}/
    = stylesheet_link_tag 'application', media: 'all'
    = javascript_include_tag 'application'
    // load mapbox
    = javascript_include_tag 'https://api.mapbox.com/mapbox.js/v2.2.3/mapbox.js'
    = stylesheet_link_tag 'https://api.mapbox.com/mapbox.js/v2.2.3/mapbox.css'
    // load cartodb
    = stylesheet_link_tag '//libs.cartocdn.com/cartodb.js/v3/3.15/themes/css/cartodb.css'
    = javascript_include_tag '//libs.cartocdn.com/cartodb.js/v3/3.15/cartodb.js'
    = csrf_meta_tags
    / Custom Fonts
    %link{:href => "https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css", :rel => "stylesheet"}/
    %link{:href => "http://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,800italic,400,300,600,700,800", :rel => "stylesheet", :type => "text/css"}/
  %body
    %header= render 'layouts/navigation'
    = render 'layouts/messages'
    = yield
    = render 'layouts/footer'
